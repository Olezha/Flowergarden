<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:jdbc.properties" />
    </bean>

    <!--<bean class="com.flowergarden.sql.ConnectionPoolJdbcImpl">-->
        <!--<constructor-arg value="${datasource.url}" />-->
        <!--<constructor-arg value="${connection.pool.size}" />-->
    <!--</bean>-->

    <bean class="com.flowergarden.sql.ConnectionPoolDbcp2BasicDataSourceImpl">
        <constructor-arg>
            <bean class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="">
                <property name="url" value="${datasource.url}" />
                <property name="initialSize" value="${connection.pool.size}" />
            </bean>
        </constructor-arg>
    </bean>

</beans>
